<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>io.swagger</groupId>
  <artifactId>AnsysPython-swagger-codegen</artifactId>
  <version>5.0.0</version>
  <packaging>jar</packaging>
  <name>AnsysPython-swagger-codegen</name>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven-clean-plugin-version>3.4.0</maven-clean-plugin-version>
    <maven-plugin-version>1.0.0</maven-plugin-version>
    <base-package-version>0.1.0</base-package-version>
    <yaml-filename>server-api.json</yaml-filename>
    <swagger-template-version>4.1.2-SNAPSHOT</swagger-template-version>
    <package-name>ansys-grantami-serverapi-openapi</package-name>
    <interface-dev-version>v252</interface-dev-version>
    <package-import-path>ansys.grantami.serverapi_openapi</package-import-path>
    <package-description>Autogenerated client library for the Granta MI Server API.</package-description>
    <base-package-version>1.1.0</base-package-version>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>io.swagger.codegen.v3</groupId>
        <artifactId>swagger-codegen-maven-plugin</artifactId>
        <version>3.0.66</version>
        <executions>
          <execution>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <inputSpec>${project.basedir}/yaml/${yaml-filename}</inputSpec>
              <language>com.ansys.granta.codegen.AnsysPythonClientCodegen</language>
              <output>${package-name}</output>
              <generateApiTests>false</generateApiTests>
              <generateModelTests>false</generateModelTests>
              <configOptions>
                <packageName>${package-import-path}.${interface-dev-version}</packageName>
                <projectName>${package-name}</projectName>
                <projectDescription>${package-description}</projectDescription>
                <pythonicPackageName>the PyGranta meta-package</pythonicPackageName>
                <pythonicPackageUrl>https://grantami.docs.pyansys.com</pythonicPackageUrl>
                <homepageUrl>https://github.com/ansys/grantami-serverapi-openapi</homepageUrl>
                <documentationUrl>https://grantami.docs.pyansys.com</documentationUrl>
                <packageVersion>${project.version}</packageVersion>
                <buildNumber>${build-id}</buildNumber>
                <isReleaseBuild>${is-release}</isReleaseBuild>
                <isNamespacePackage>True</isNamespacePackage>
              </configOptions>
            </configuration>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>com.ansys</groupId>
            <artifactId>pyansys-swagger-codegen</artifactId>
            <version>${swagger-template-version}</version>
            <scope>compile</scope>
          </dependency>
        </dependencies>
      </plugin>
      <plugin>
        <artifactId>maven-clean-plugin</artifactId>
        <version>${maven-clean-plugin-version}</version>
        <configuration>
          <filesets>
            <fileset>
              <directory>${package-name}/src/ansys/grantami/serverapi_openapi/${interface-dev-version}</directory>
            </fileset>
          </filesets>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>dev</id>
      <activation>
        <property>
          <name>!release</name>
        </property>
      </activation>
      <properties>
        <package-version>${base-package-version}.dev${build-id}</package-version>
      </properties>
    </profile>
    <profile>
      <id>release</id>
      <activation>
        <property>
          <name>release</name>
        </property>
      </activation>
      <properties>
        <package-version>${base-package-version}</package-version>
      </properties>
    </profile>
  </profiles>
</project>
